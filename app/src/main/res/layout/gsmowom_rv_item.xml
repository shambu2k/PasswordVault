<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_item_ofgsmowomRV"
    card_view:cardCornerRadius="5dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:padding="5dp"
        android:background="@drawable/row_select_background"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/gsmowom_provider_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facebook"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/gsmowom_assoEmail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Associated Email ID"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/gsmowom_assoPhno_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Associated Ph. No."
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/gsmowom_username_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/gsmowom_pass_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="18sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/gsmowom_adiInfo_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Additional notes"
                android:textSize="18sp"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>